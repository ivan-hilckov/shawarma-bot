{
  "version": "2.0.0",
  "tasks": [
    // ==========================================
    // DOCKER
    // ==========================================
    {
      "label": "🐳 Docker: Up",
      "type": "shell",
      "command": "npm",
      "args": ["run", "docker:up"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "🛑 Docker: Down",
      "type": "shell",
      "command": "npm",
      "args": ["run", "docker:down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "🔨 Docker: Rebuild All",
      "type": "shell",
      "command": "docker-compose",
      "args": ["build", "--no-cache"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "🔄 Docker: Rebuild & Up",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d", "--build", "--force-recreate"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "dependsOn": "🛑 Docker: Down",
      "problemMatcher": []
    },
    {
      "label": "🤖 Docker: Rebuild Bot Only",
      "type": "shell",
      "command": "docker-compose",
      "args": ["build", "--no-cache", "bot"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "📊 Docker: Logs Bot",
      "type": "shell",
      "command": "docker-compose",
      "args": ["logs", "-f", "bot"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },

    // ==========================================
    // ТЕСТИРОВАНИЕ
    // ==========================================
    {
      "label": "🧪 Test",
      "type": "shell",
      "command": "npm",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      }
    },

    // ==========================================
    // ДЕПЛОЙ
    // ==========================================
    {
      "label": "🚀 Deploy",
      "type": "shell",
      "command": "cd deployment && ./deploy.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "dependsOn": ["🔨 Build"]
    }
  ]
}
