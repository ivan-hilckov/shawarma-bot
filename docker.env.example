# Telegram Bot Configuration
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Environment
NODE_ENV=production

# Database Configuration (для Docker)
# Внутри контейнера PostgreSQL работает на стандартном порту 5432
# Снаружи доступен на порту 5433 (чтобы избежать конфликта с системным PostgreSQL)
DATABASE_URL=postgresql://shawarma_user:shawarma_pass@postgres:5432/shawarma_db

# PostgreSQL Configuration
POSTGRES_DB=shawarma_db
POSTGRES_USER=shawarma_user
POSTGRES_PASSWORD=shawarma_pass

# Redis Configuration (используется в docker-compose.yml автоматически)
# Внутри контейнера Redis работает на стандартном порту 6379
# Снаружи доступен на порту 6380
REDIS_URL=redis://redis:6379

# Уведомления для персонала ресторана (НОВОЕ)
# ID канала или группы для уведомлений о заказах (получите от @userinfobot)
# NOTIFICATIONS_CHAT_ID=-1001234567890

# ID пользователей-администраторов через запятую (получите от @userinfobot)
# ADMIN_USER_IDS=123456789,987654321

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123
