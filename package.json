{
  "name": "shawarma-bot",
  "version": "3.0.0",
  "description": "Production-ready Telegram бот для заказа шаурмы с раздельной архитектурой API и бота, полным функционалом корзины, системой заказов и автоматическим деплоем",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "build:api": "tsc --project tsconfig.api.json",
    "build:bot": "tsc --project tsconfig.bot.json",
    "start": "node dist/bot.js",
    "start:api": "node dist/api/server.js",
    "dev": "ts-node src/bot.ts",
    "dev:api": "ts-node src/api/server.ts",
    "dev:watch": "ts-node --watch src/bot.ts",
    "dev:api:watch": "ts-node --watch src/api/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest --testPathPattern=api",
    "test:quiet": "jest --silent",
    "test:verbose": "jest --verbose",
    "test:debug": "DEBUG_TESTS=1 jest --verbose",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "type-check:api": "tsc --project tsconfig.api.json --noEmit",
    "type-check:bot": "tsc --project tsconfig.bot.json --noEmit",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "prepare": "husky install"
  },
  "keywords": [
    "telegram",
    "bot",
    "food",
    "shawarma",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/redis": "^6.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@types/pg": "^8.15.2",
    "@types/redis": "^4.0.10",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^1.1.9",
    "node-telegram-bot-api": "^0.66.0",
    "pg": "^8.16.0",
    "redis": "^5.1.0",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
