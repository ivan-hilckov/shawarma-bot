{
  "name": "shawarma-bot",
  "version": "2.0.0",
  "description": "Production-ready Telegram бот для заказа шаурмы с полным функционалом корзины, системой заказов и автоматическим деплоем",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "dev": "ts-node src/bot.ts",
    "dev:watch": "ts-node --watch src/bot.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts",
    "lint:fix": "eslint src/**/*.ts __tests__/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts __tests__/**/*.ts",
    "format:check": "prettier --check src/**/*.ts __tests__/**/*.ts",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t shawarma-bot .",
    "docker:run": "docker run --env-file .env shawarma-bot",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f bot",
    "docker:restart": "docker-compose restart bot",
    "debug": "node --inspect ts-node src/bot.ts",
    "debug:brk": "node --inspect-brk ts-node src/bot.ts",
    "debug:prod": "node --inspect dist/bot.js",
    "prepare": "husky install"
  },
  "keywords": [
    "telegram",
    "bot",
    "food",
    "shawarma",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@types/pg": "^8.15.2",
    "@types/redis": "^4.0.10",
    "dotenv": "^16.5.0",
    "node-telegram-bot-api": "^0.66.0",
    "pg": "^8.16.0",
    "redis": "^5.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-import-resolver-typescript": "^3.6.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
