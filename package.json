{
  "name": "shawarma-bot",
  "version": "1.0.0",
  "description": "Простой Telegram бот для заказа шаурмы",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "dev": "ts-node src/bot.ts",
    "dev:watch": "ts-node --watch src/bot.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t shawarma-bot .",
    "docker:run": "docker run --env-file .env shawarma-bot",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f bot",
    "docker:restart": "docker-compose restart bot"
  },
  "keywords": [
    "telegram",
    "bot",
    "food",
    "shawarma",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.5.0",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
